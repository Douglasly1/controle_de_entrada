
<%= simple_form_for(@visitante) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :cpf %>
    <%= f.input :rg %>
    <%= f.input :tel %>
    <%= f.input :data_hora %>
    <%= f.input :concluida %>
    <%= f.input :foto %>
    <%= f.association :setor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
